<% user = User.find(comment.owner_id) %>
<%= render_markdown(comment.body) %><br>
<em class="small">
    <%= user.name %> - <%= render_long_datetime(comment.updated_at) %>
    <% if current_user == user %>
    (<%= link_to :delete, [comment.commentable, comment],
                 method: :delete,
                 data: { confirm: 'Are you sure?' } %>)
    <% end %>
</em>
<hr>