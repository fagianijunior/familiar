<% user = User.find(comment.owner_id) %>
<%= comment.render_markdown %><br>
<em class="small">
    <%= user.name %> - <%= comment.cool_date %>
    <% if current_user == user %>
    (<%= link_to :delete, [comment.commentable, comment],
                 method: :delete,
                 data: { confirm: 'Are you sure?' } %>)
    <% end %>
</em>
<hr>