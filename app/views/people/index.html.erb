<div class="row text-center">
    <%= link_to 'New person', new_person_path, :class => "btn btn-default" %>
</div>

<div class="row text-center">
    
    <% if @people.count > 0 %>
    <div class="col-md-4 col-md-offset-4">
        <%= render @people %>
    </div>
    <%= will_paginate @reviews, renderer: BootstrapPagination::Rails %>
    <% else %>
    <h2>Nothing to see here!</h2>
    <% end %>

</div>