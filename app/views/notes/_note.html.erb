<div class="col-lg-10 col-lg-offset-1">
    <div class="pull-left fake-thumb text-info text-center note-thumb">Aa</div>
    <div class="pull-left">
        <h4><a href="<%= note_path(note) %>"><%= note.title %></a></h4>
        <% if note.date.present? %>
        <h5 class="text-muted">Note: <%= note.date %></h5>
        <% else %>
        <h5 class="text-muted">Note</h5>
        <% end %>
    </div>
    <div class="clearfix"></div>
    <hr style="margin: 3px;">
</div>