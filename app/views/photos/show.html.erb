<div class="text-center">
    <%= image_tag @photo.image.url, :class => "img-responsive center-block img-reasonable" %>
    <% if @photo.title.present? %>
    <h2><%= @photo.title %></h2>
    <% end %>
    <% if @photo.date.present? %>
    <%= @photo.date %>
    <% end %>
    <% if @photo.tag_list.present? %>
        <em>Tagged: <%= @photo.tags.collect{|t| link_to t, '/tagged/' + t }.join(', ').html_safe %></em>
        <br><br>
    <% end %>
</div>

<% if current_user && current_user.editor? %>
<div class="col-lg-12 text-center">
    <%= link_to 'Edit photo', edit_photo_path(@photo), :class => "btn btn-default" %>
    <%= link_to 'Delete', @photo,
               method: :delete,
               class: "btn btn-danger",
               data: { confirm: 'Are you sure? This will delete all associated comments as well.' } %>
    <br><br><br>
</div>
<% end %>

<div class="container">
<div class="row">
<h4>Comments</h4>
<%= render @photo.comments %>
</div>
<% if current_user %>
<div class="row">
<%= render 'comments/form' %>
</div>
<% end %>
</div>