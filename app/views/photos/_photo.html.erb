<div class="col-lg-10 col-lg-offset-1">
    <div class="pull-left thumb"><img class="img-responsive" src="<%= photo.image.url(:thumb) %>"></img></div>
    <div class="pull-left">
        <h4><a href="<%= photo_path(photo) %>"><%= photo.title %></a></h4>
        <% if photo.date.present? %>
        <h5 class="text-muted">Photo: <%= photo.date %></h5>
        <% else %>
        <h5 class="text-muted">Photo</h5>
        <% end %>
    </div>
    <div class="clearfix"></div>
    <hr style="margin: 3px;">
</div>